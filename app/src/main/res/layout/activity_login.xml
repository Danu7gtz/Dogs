<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo fijo (no intercepta eventos) -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fondo_dogs"
        android:scaleType="centerCrop"
        android:contentDescription="@string/app_name"
        android:clickable="false"
        android:focusable="false" />

    <!-- ÚNICO scroll que envuelve logo + formulario -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="32dp"
        android:overScrollMode="always">

        <!-- Hijo único del scroll -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="300dp"
                android:layout_height="280dp"
                android:src="@drawable/logo_perros"
                android:contentDescription="@string/app_name"
                android:layout_marginBottom="24dp"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />

            <!-- Campos -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/bg_input_gray_rounded"
                android:hint="Correo electrónico"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:textColorHint="#66000000"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_input_gray_rounded"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textColorHint="#66000000"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

            <!-- Botón -->
            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:text="Entrar"
                android:textAllCaps="false"
                android:textColor="#000000"
                android:background="@drawable/bg_button_white_rounded"
                android:backgroundTint="@null" />

            <!-- Espacio inferior para teclado -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
