<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dogs">

    <!-- Permisos -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_dog_two"
        android:label="@string/app_name"
        android:theme="@style/Theme.Dogs">

        <!-- NUEVA Activity de arranque -->
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Activities existentes -->
        <activity
            android:name=".ui.DayDetailActivity"
            android:exported="false"
            android:parentActivityName=".ui.AgendaActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.AgendaActivity" />
        </activity>

        <activity
            android:name=".ui.AgendaActivity"
            android:exported="false" />

        <!-- Login ya NO es launcher -->
        <activity
            android:name=".ui.LoginActivity"
            android:windowSoftInputMode="stateUnchanged|adjustResize"
            android:exported="true" />

        <!-- Firebase Messaging Service -->
        <service
            android:name=".push.DogsFirebaseMessagingService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>
</manifest>